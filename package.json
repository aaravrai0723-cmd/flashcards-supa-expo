{
  "name": "flashcards-supa-expo",
  "version": "0.1.0",
  "private": true,
  "description": "A flashcards app built with Expo, Supabase, and TypeScript",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev -w mobile",
    "dev:mobile": "npm run start -w mobile",
    "build": "npm run build -w sdk && npm run build -w mobile",
    "build:sdk": "npm run build -w sdk",
    "lint": "npm run lint -ws --if-present",
    "typecheck": "npm run typecheck -ws --if-present",
    "gen:types": "supabase gen types typescript --linked > packages/sdk/src/types/database.ts",
    "gen:types:local": "supabase gen types typescript --local > packages/sdk/src/types/database.ts",
    "db:push": "supabase db push",
    "db:seed": "./scripts/seed-manual-instructions.sh",
    "db:seed:psql": "./scripts/seed-remote-simple.sh",
    "clean": "rm -rf node_modules apps/*/node_modules packages/*/node_modules apps/*/dist packages/*/dist",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\""
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.8.2",
    "@types/node": "^20.11.0",
    "eslint": "^8.56.0",
    "prettier": "^3.2.5",
    "supabase": "^2.53.6",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "dependencies": {
    "react-native-worklets": "^0.5.1"
  }
}
